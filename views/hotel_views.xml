<?xml version="1.0" encoding="utf-8"?>
<odoo>  
<record id="view_hotel_list" model="ir.ui.view"> 
   <field name="name">hotel.management.list</field> 
   <field name="model">hotel.management</field>
   <field name="arch" type="xml"> 
       <list>
           <field name="name"/>
       </list>
   </field>
</record>

<record id="view_hotel_form" model="ir.ui.view">        
   <field name="name">hotel.management.form</field>      
   <field name="model">hotel.management</field>
   <field name="arch" type="xml">
       <form>
           <sheet>
               <group>
                   <group>
                       <field name="name"/>
                   </group>
               </group>
           </sheet>
        <chatter/>
       </form>
   </field>
</record>


<record id="action_hotel_system" model="ir.actions.act_window">  
   <field name="name">Hotel Management System</field>  
   <field name="res_model">hotel.management</field> 
   <field name="view_mode">list,form</field> 
</record>


</odoo>
